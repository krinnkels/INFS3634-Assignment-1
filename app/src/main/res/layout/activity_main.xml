<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

    <include
        android:id="@+id/sydneyTimezone"
        layout="@layout/timezones"
        />

    <include
        android:id="@+id/newYorkTimezone"
        layout="@layout/timezones"
        />

     <include
         android:id="@+id/tokyoTimezone"
         layout="@layout/timezones"
         />

    <include
        android:id="@+id/londonTimezone"
        layout="@layout/timezones"
        />

    <include
        android:id="@+id/amsterdamTimezone"
        layout="@layout/timezones"
        />

    <include
        android:id="@+id/capeTownTimezone"
        layout="@layout/timezones"
        />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24 Hour Format"
            android:background="@color/midorange"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="12 HOUR FORMAT"
            android:background="@color/darkorange"
            />

    </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>